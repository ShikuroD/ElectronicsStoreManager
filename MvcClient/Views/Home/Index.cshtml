@model HomeViewModel
@using AppCore.Models
@{
    ViewData["Title"] = "Home Page";
}
<!-- banner -->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <!-- Indicators-->
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>

    </ol>
    <div class="carousel-inner">
        <div class="carousel-item item1 active">
            <div class="container">
                <div class="w3l-space-banner">
                    <div class="carousel-caption p-lg-5 p-sm-4 p-3">
                        <p>Get flat
                            <span>10%</span> Cashback
                        </p>
                        <h3 class="font-weight-bold pt-2 pb-lg-5 pb-4">The
                            <span>Big</span>
                            Sale
                        </h3>
                        <a class="button2" href="product.html">Shop Now </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-item item2">
            <div class="container">
                <div class="w3l-space-banner">
                    <div class="carousel-caption p-lg-5 p-sm-4 p-3">
                        <p>advanced
                            <span>Wireless</span> earbuds
                        </p>
                        <h3 class="font-weight-bold pt-2 pb-lg-5 pb-4">Best
                            <span>Headphone</span>
                        </h3>
                        <a class="button2" href="product.html">Shop Now </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<!-- //banner -->
<div class="ads-grid py-sm-5 py-4">
    <div class="container py-xl-4 py-lg-2">
        <!-- tittle heading -->
        <h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
            <span>O</span>ur
            <span>N</span>ew
            <span>P</span>roducts
        </h3>
        <!-- //tittle heading -->
        <div class="row">
            <!-- product left -->
            <div class="agileinfo-ads-display col-lg-9">
                <div class="wrapper">
                    <!-- first section -->
                    <div class="product-sec1 px-sm-4 px-3 py-sm-5  py-3 mb-4">
                        <h3 class="heading-tittle text-center font-italic">New Brand</h3>
                        <div class="row">
                            @foreach (var item in Model.items)
                            {
                                <div class="col-md-4 product-men mt-5">
                                    <div class="men-pro-item simpleCart_shelfItem">
                                        <div class="men-thumb-item text-center">
                                            <img src="~/img/mk4.jpg" alt="">
                                            <div class="men-cart-pro">
                                                <div class="inner-men-cart-pro">
                                                    <a asp-action="Detail" asp-controller="shop" asp-route-itemId=@item.Id
                                                        class="link-product-add-cart">Quick View</a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="item-info-product text-center border-top mt-4">
                                            <h4 class="pt-1">
                                                <a asp-action="Detail" asp-controller="shop" asp-route-itemId=@item.Id
                                                    id="name_@item.Id">@item.Name</a>
                                            </h4>
                                            <div class="info-product-price my-2">
                                                <span class="item_price">$@item.UnitPrice.ToString("N2")</span>
                                            </div>
                                            <div
                                                class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                                                <fieldset>
                                                    <input type="hidden" id="price_@item.Id" value="@item.UnitPrice">
                                                    <input type="hidden" id="type_@item.Id" value="@item.Type">

                                                    <button name="submit" id="@item.Id" class="addCart button btn">Add to
                                                        cart
                                                    </button>
                                                </fieldset>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                    <!-- //first section -->
                    <div class="product-sec1 px-sm-4 px-3 py-sm-5  py-3 mt-4">
                        <h3 class="heading-tittle text-center font-italic">New Combo</h3>
                        <div class="row">
                            @foreach (var item in Model.combos)
                            {
                                <div class="col-md-4 product-men mt-5">
                                    <div class="men-pro-item simpleCart_shelfItem">
                                        <div class="men-thumb-item text-center">
                                            <img src="~/img/mk4.jpg" alt="">
                                            <div class="men-cart-pro">
                                                <div class="inner-men-cart-pro">
                                                    <a asp-action="Detail" asp-controller="shop"
                                                        asp-route-itemId="@item.Id" class="link-product-add-cart">Quick View</a>
                                                </div>
                                            </div>
                                        </div>
                                        <span class="product-new-top">New</span>
                                        <div class="item-info-product text-center border-top mt-4">
                                            <h4 class="pt-1">
                                                <a id="name_@item.Id" asp-action="Detail" asp-controller="shop"
                                                    asp-route-itemId="@item.Id">@item.Name</a>
                                            </h4>
                                            <div class="info-product-price my-2">
                                                <span class="item_price">$@item.UnitPrice.ToString("N2")</span>
                                                <input type="hidden" id="price_@item.Id" value="@item.UnitPrice">
                                                <input type="hidden" id="type_@item.Id" value="@item.Type">
                                            </div>
                                            <div
                                                class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out">
                                                <fieldset>


                                                    <button name="submit" id="@item.Id" class="addCart button btn">
                                                        Add to cart
                                                    </button>
                                                </fieldset>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            }


                        </div>
                    </div>
                </div>
            </div>
            <!-- //product left -->

            <!-- product right -->
            <div class="col-lg-3 mt-lg-0 mt-4 p-lg-0">
                <div class="side-bar p-sm-4 p-3">
                    <div class="search-hotel border-bottom py-2">
                        <h3 class="agileits-sear-head mb-3">Search Here..</h3>
                        <form asp-action="Index" asp-controller="Shop" method="post">
                            <input type="search" placeholder="Product name..." name="searchString">
                            <input type="submit" value=" ">

                            <div class="left-side py-2">
                                <ul>
                                    @for (var i = 0; i < Model.CheckBoxValues.Count; i++)
                                    {
                                        
                                            @if(!Model.CheckBoxValues[i].types.Equals(ITEM_TYPE.COMBO)){
                                                <li>
                                                    @Html.CheckBoxFor(m => m.CheckBoxValues[i].IsSelected)
                                                    @Html.DisplayFor(m => m.CheckBoxValues[i].types)
                                                    @Html.HiddenFor(m => m.CheckBoxValues[i].types)
                                                </li>
												
											}
                                            else{
                                                <input type="hidden" name="CheckBoxValues[1].IsSelected" value="false" />
                                                <input type="hidden" name="CheckBoxValues[1].types" value="COMBO" />	
                                            }
                                    }


                                </ul>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- //product right -->
            </div>
        </div>
    </div>
</div>
<!-- //top products -->